      <script>


        $('#formRegister').on('submit', function (e) {
          console.log(e);
          e.preventDefault();

          const username = $('#txtUsername').val();
          if (username.length === 0) {
            alert('Invalid data. ');
            return;
          }

          $.getJSON(`/account/is-available?user=${username}`, function (data) {
            console.log(data);
            if (data === true) {
              $('#formRegister').off('submit').submit();
            } else {
              alert('Invalid data. Username already in use! ');
            }
          })
        });

        $('#txtDateofbirth').datetimepicker({
          format: 'd/m/Y',
          timepicker: false,
          mask: true,
        });
      </script>

